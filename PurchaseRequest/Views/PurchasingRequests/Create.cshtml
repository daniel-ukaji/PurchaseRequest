                    <label asp-for="Prepayment" class="control-label"></label>
                    <input asp-for="Prepayment" class="form-control" />
                    <span asp-validation-for="Prepayment" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="BalancePayment" class="control-label"></label>
                    <input asp-for="BalancePayment" class="form-control" />
                    <span asp-validation-for="BalancePayment" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="AdviceOnCost" class="control-label"></label>
                    <input asp-for="AdviceOnCost" class="form-control" />
                    <span asp-validation-for="AdviceOnCost" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="DeliveryDate" class="control-label"></label>
                    <input asp-for="DeliveryDate" class="form-control datepicker" type="text" />
                    <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <a class="btn btn-dark" asp-action="Index">Back to My Purchase</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
