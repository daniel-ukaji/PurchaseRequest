                </select>
                <span asp-validation-for="PurchaseTypeId" class="text-danger"></span>
                
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RequestComments" class="control-label"></label>
                        <textarea asp-for="RequestComments" class="form-control"></textarea>
                        <span asp-validation-for="RequestComments" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Items" class="control-label"></label>
                        <input asp-for="Items" class="form-control" />
                        <span asp-validation-for="Items" class="text-danger"></span>
                    </div>
                </div>
                
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Manufacturer" class="control-label"></label>
                        <input asp-for="Manufacturer" class="form-control" />
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                </div>
                
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
                
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                </div>
                
                <br />
                <div class="form-group">
                    <label asp-for="Power" class="control-label"></label>
                    <input asp-for="Power" class="form-control" />
                    <span asp-validation-for="Power" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Unit" class="control-label"></label>
                    <input asp-for="Unit" class="form-control" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="VendorName" class="control-label"></label>
                    <input asp-for="VendorName" class="form-control" />
                    <span asp-validation-for="VendorName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="VendorAddress" class="control-label"></label>
                    <input asp-for="VendorAddress" class="form-control" />
                    <span asp-validation-for="VendorAddress" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="AmountProduction" class="control-label"></label>
